{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "CommonJS",
    "skipLibCheck": true
  },
  "include": ["./src/*.ts"],
  "exclude": ["node_modules/**/*"]
}
